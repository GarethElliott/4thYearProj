<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/bg"
    android:weightSum="1">


    <LinearLayout
        android:layout_width="365dp"
        android:layout_height="265dp"
        android:orientation="vertical"
        android:padding="10dp" >

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/imageView"
            android:layout_width="180dp"
            android:layout_height="250dp" />
    </LinearLayout>

    <GridLayout
        android:layout_width="360dp"
        android:layout_height="211dp"
        android:columnCount="1"
        android:rowCount="2"
        android:layout_weight="0.18">

        <GridLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:layout_weight="0.18">

            <GridLayout
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="1"
                android:layout_weight="0.18"
                android:layout_row="0"
                android:layout_column="0">

            <EditText
                android:id="@+id/textNewToDo"
                android:layout_width="140dp"
                android:layout_height="50dp"
                android:ems="10"
                android:hint="@string/add_textbox_hint"
                android:layout_gravity="left"
                android:layout_row="0"
                android:layout_column="0">
                <requestFocus />
            </EditText>

            <ProgressBar
                android:id="@+id/loadingProgressBar"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            </GridLayout>
            <ListView
                android:id="@+id/listViewToDo"
                android:layout_width="170dp"
                android:layout_height="161dp"
                android:layout_row="1"
                android:layout_column="0"
                tools:listitem="@layout/row_list_to_do"
                android:padding="6dip" >
            </ListView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/textView"
                android:layout_row="1"
                android:layout_column="1" />
        </GridLayout>
    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="5"
        android:rowCount="1"
        android:layout_weight="0.18">

        <ImageView
            android:id="@+id/myPhotosBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:background="@drawable/myphotosbuttonimg"/>
        <ImageView
            android:id="@+id/refreshBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:background="@drawable/refreshbuttonimg"/>
        <ImageView
            android:id="@+id/takeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="2"
            android:background="@drawable/camerabuttonimg"/>
        <ImageView
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="3"
            android:background="@drawable/savebuttonimg"/>
        <ImageView
            android:id="@+id/chooseBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="4"
            android:background="@drawable/choosephotobuttonimg" />
    </GridLayout>
</LinearLayout>